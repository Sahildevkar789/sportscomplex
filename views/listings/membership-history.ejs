<%- layout("/layouts/boilerplates") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Membership Booking History</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Inline CSS -->
    <style>
        body {
            background-color: #121212 !important;
            color: #e0e0e0 !important;
            font-family: 'Poppins', sans-serif !important;
        }

        h2 {
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #ffcc00 !important;
            text-shadow: 2px 2px 10px rgba(255, 204, 0, 0.5) !important;
        }

        /* Membership History Cards */
        .card {
            background: linear-gradient(135deg, #1c1c1c, #292929) !important;
            border: 1px solid #ffcc00 !important;
            border-radius: 12px !important;
            padding: 15px !important;
            transition: all 0.3s ease-in-out !important;
            box-shadow: 0 4px 15px rgba(255, 204, 0, 0.2) !important;
        }

        .card:hover {
            transform: scale(1.05) !important;
            box-shadow: 0px 4px 20px rgba(255, 204, 0, 0.6) !important;
        }

        /* Card Titles */
        .card-title {
            font-size: 1.2rem !important;
            font-weight: bold !important;
            color: #ffcc00 !important;
        }

        /* Membership Details */
        .card-text {
            font-size: 1rem !important;
            color: white !important;
        }

        /* Status Badges */
        .badge {
            font-size: 14px !important;
            padding: 6px 12px !important;
            border-radius: 5px !important;
            font-weight: bold !important;
        }

        .badge.bg-success {
            background-color: #28a745 !important;
            color: #fff !important;
        }

        .badge.bg-danger {
            background-color: #dc3545 !important;
            color: #fff !important;
        }
    </style>
</head>

<body>
    <div class="container my-5">
        <h2 class="text-center mb-4">Your Membership History</h2>

        <% if (user.membershipBookingHistory.length === 0) { %>
            <div class="text-center mt-4">
                <h4 class="text-secondary">No memberships booked yet.</h4>
            </div>
        <% } else { %>
            <div class="row">
                <% user.membershipBookingHistory.forEach(membership => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    üèÜ <b><%= membership.sport %> Membership</b>
                                </h5>
                                <p class="card-text1"  style="color: #fff !important;">
                                    ‚è≥ Duration: <b><%= membership.monthSlot %></b> <br>
                                    üí∞ Price: ‚Çπ<%= membership.price %> <br>
                                    üìÖ Booking Date: <%= new Date(membership.bookingDate).toLocaleDateString() %> <br>
                                    üèÅ Expiry Date: <%= new Date(membership.expiryDate).toLocaleDateString() %> <br>
                                    üîπ Status:
                                    <% if (new Date(membership.expiryDate) > new Date()) { %>
                                        <span class="badge bg-success">Active</span>
                                    <% } else { %>
                                        <span class="badge bg-danger">Expired</span>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</body>
</html>
