
<style>  /* Animations */
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    nav {
      background: #1f1f1f;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.1);
      animation: fadeInUp 1s ease-in-out;
    }
hr{
  display: block;
  background: #5c8bda;
  height: 0.25rem;
  width: 100%;
  border: none;
  margin: 1.125rem 0 1.175rem 0;
}
    ul {
      list-style: none;
      padding: 0.7rem;
      margin: 0px;
      display: flex;
      justify-content: center;
      gap: 20px;
    }

    li {
      display: inline;
    }

