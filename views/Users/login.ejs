<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- <link rel="stylesheet" href="/style/style.css"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
      /* Fullscreen Video Background */
      .video-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        overflow: hidden;
        z-index: -1;
      }

      .video-bg {
        width: 100%;
        height: 100vh;
        object-fit: cover;
      }

      .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
      }

      /* Navbar Styling */
      .navbar {
        background-color: rgba(255, 255, 255, 0.1) !important;
        backdrop-filter: blur(10px);
      }

      .navbar-brand i {
        font-size: 1.5rem;
      }

      .navbar-nav .nav-link {
        color: white !important;
        font-weight: bold;
        transition: 0.3s;
      }

      .navbar-nav .nav-link:hover {
        color: #f8b400 !important;
      }

      /* Login Box */
      .boxx {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .login-container {
        background: rgba(0, 0, 0, 0.1);
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6);
      text-align: left;
      animation: fadeIn 1s ease-out;
      border: 1px solid #555;
color: #ffffff;
background-color: #595959;
      }

      h1 {
        font-size: 1.8rem;
        margin-bottom: 20px;
      }

      /* Form Styling */
      .form-control {
        border-radius: 5px;
        padding: 10px;
      }

      .btn-success {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        background-color: #e7a84f;
        transition: 0.3s;
      }

      .btn-success:hover {
        background-color: #218838;
      }
        /* Animation */
    @keyframes fadeIn {
      0% { opacity: 0; transform: translateY(-50px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    </style>

</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-md navbar-dark border-bottom sticky-top">
  <div class="container">
    <a class="navbar-brand" href="/">
      <img src="../style/assests/fcritlogo.png" alt="" width="40" /> Fr.Agnels Sports Complex</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/">Home</a>
      </div>
    </div>
  </div>
</nav>

<!-- Background Video -->
<div class="video-container">
  <video class="video-bg" autoplay muted loop>
    <source src="https://videos.pexels.com/video-files/5192077/5192077-sd_640_360_30fps.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>
  <div class="overlay"></div>
</div>

<!-- Login Form -->
<div class="boxx">
  <div class="login-container">
    <h1>Login to Sports Complex</h1>
    <form action="/login" method="post" class="needs-validation" novalidate>

      <div class="mb-3">
        <label for="username" class="form-label">Username:</label>  
        <input type="text" id="username" name="username" class="form-control" required> 
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email:</label>  
        <input type="email" id="email" name="email" class="form-control" required> 
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password:</label>  
        <input type="password" id="password" name="password" class="form-control" required> 
      </div>

      <button class="btn btn-success">Login</button>

    </form>
  </div>
</div>

<!-- Bootstrap Script -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
